[color]
    ui = true
[user]
    name = Brian Mego
    email = brianmego@gmail.com
[alias]
    co = checkout
    ec = config --global -e
    cob = checkout -b
    cm = !git add -A && git commit -m
    wip = !git add -u && git commit -m "WIP" --no-verify 
    undo = reset HEAD~1 --mixed
    amend = commit -a --amend
    bclean = "!f() { git branch --merged ${1-master} | grep -v " ${1-master}$" | grep -v " ${1-develop}$" |xargs git branch -d; }; f"
[push]
    default = simple
[core]
    editor = /usr/bin/vim
    autocrlf = input
    pager = less -F -X
[advice]
	detachedHead = false
